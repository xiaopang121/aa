<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/iv_hongbao"
        android:scaleType="centerInside"
        android:src="@drawable/ic_smail_hongbao"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="@dimen/view_margin_30"
        android:id="@+id/iv_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_margin_10"
        android:layout_alignTop="@+id/iv_hongbao"
        android:layout_height="@dimen/view_margin_30"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="如家快捷酒店"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/white"
        android:singleLine="true"
        android:layout_alignLeft="@+id/iv_hongbao"
        android:layout_alignRight="@+id/iv_hongbao"
        android:gravity="center"
        android:layout_below="@+id/iv_head"
        android:id="@+id/tv_name"
        android:layout_marginTop="@dimen/view_margin_10"
        android:layout_height="wrap_content" />




    <TextView
        android:layout_width="wrap_content"
        android:text="恭喜发财，大吉大利"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"
        android:singleLine="true"
        android:layout_alignLeft="@+id/iv_hongbao"
        android:layout_alignRight="@+id/iv_hongbao"
        android:gravity="center"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/view_margin_15"
        android:layout_height="wrap_content" />





</RelativeLayout>