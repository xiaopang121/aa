<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/view_margin_40">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/theme_color_primary"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:text="@string/title_device_num"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/iv_close"
                android:paddingRight="@dimen/view_margin_10"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <include layout="@layout/divide_v_black" />
        <com.insthub.cat.android.ui.widget.PasswordView
            android:layout_width="match_parent"
            android:id="@+id/passwordview"

            android:layout_height="wrap_content"/>


    </LinearLayout>


</RelativeLayout>