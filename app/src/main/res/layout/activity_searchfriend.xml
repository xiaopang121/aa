<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_color_primary"
    android:orientation="vertical">

    <com.common.android.fui.widget.CommonTitleBar
        android:id="@+id/common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bar_height"
        />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg">


    <RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/view_margin_5"
    android:layout_height="@dimen/view_margin_45">





    <Button
    android:id="@+id/bt_search"
    style="@style/STYLE_LOGIN_SUMBIT_BUTTON"
    android:layout_width="wrap_content"
    android:text="搜索"
    android:layout_marginRight="@dimen/view_margin_5"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true" />


    <EditText
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_toLeftOf="@+id/bt_search"
    android:gravity="left|center"
    android:id="@+id/tv_search"
    android:singleLine="true"
    android:layout_alignParentLeft="true"
    android:background="@drawable/shape_rect_10_grey"
    android:layout_marginLeft="@dimen/view_margin_5"
    android:focusable="true"
    android:drawableLeft="@drawable/ic_search_gray_18dp"
    android:focusableInTouchMode="true"
    android:hint="请输入帐号\群号"
    android:textColor="@color/B_black_70"
    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
    android:layout_centerHorizontal="true" />



    </RelativeLayout>

    <include layout="@layout/divide_v_black"/>
    <View
    android:layout_width="match_parent"
    android:background="@color/md_divider_black"
    android:layout_height="@dimen/view_margin_5"></View>
    <include layout="@layout/divide_v_black"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/lly_find_bar"
    android:background="@color/white"
    android:layout_height="wrap_content">


    <TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_margin_40"
    android:paddingLeft="@dimen/view_margin_10"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    android:gravity="center_vertical|left"
    android:id="@+id/tv_search_person"
    android:background="?selectableItemBackground"
    android:textColor="@color/B_black_70"
    android:text="找人"/>
    <include layout="@layout/divide_v_black"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_margin_40"
    android:paddingLeft="@dimen/view_margin_10"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    android:gravity="center_vertical|left"
    android:background="?selectableItemBackground"
    android:id="@+id/tv_search_group"
    android:textColor="@color/B_black_70"
    android:text="找群"/>
    <include layout="@layout/divide_v_black"/>
    </LinearLayout>

    </LinearLayout>




</LinearLayout>