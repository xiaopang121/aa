<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_color_primary"
    android:orientation="vertical">

    <com.common.android.fui.widget.CommonTitleBar
        android:id="@+id/common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_bar_height"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_1"
        android:background="@color/white"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_margin_10"
            android:layout_height="@dimen/view_margin_45">

            <TextView
                android:layout_width="wrap_content"
                android:text="公司名称："
                android:textColor="@color/B_black_70"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="南京启腾腾信息科技有限公司"
                android:gravity="center_vertical"
                android:textColor="@color/B_black_70"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent" />
        </LinearLayout>

       <include layout="@layout/divide_v_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_margin_10"
            android:layout_height="@dimen/view_margin_45">

            <TextView
                android:layout_width="wrap_content"
                android:text="开  户  行："
                android:textColor="@color/B_black_70"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="中国招商银行"
                android:gravity="center_vertical"
                android:textColor="@color/B_black_70"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent" />
        </LinearLayout>
        <include layout="@layout/divide_v_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/view_margin_10"
            android:layout_height="@dimen/view_margin_45">

            <TextView
                android:layout_width="wrap_content"
                android:text="账        户："
                android:textColor="@color/B_black_70"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="3874 7989 7890 8087 "
                android:gravity="center_vertical"
                android:textColor="@color/B_black_70"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent" />
        </LinearLayout>
        <include layout="@layout/divide_v_black"/>

        <TextView
            android:layout_width="match_parent"
            android:text="付款成功请联系客服"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/view_margin_20"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:singleLine="true"
            android:textColor="@color/B_black_70"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginTop="@dimen/view_margin_10"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:text="电话：1874567 8909 或者 微信："
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:singleLine="true"
                android:textColor="@color/B_black_70"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="qitengteng"
                android:gravity="center"

                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:singleLine="true"
                android:textColor="@color/theme_color_primary"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_height="@dimen/view_margin_40"
            android:background="@color/white">

            <Button
                android:layout_width="match_parent"
                android:text="取消支付"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/bt_shop_cancel"
                android:textColor="@color/white"
                android:background="@drawable/select_rect_gray3"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />


            <Button
                android:layout_width="match_parent"

                android:text="确认支付"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/bt_shop_sure"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background="@drawable/select_login2"

                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>