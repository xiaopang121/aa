<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rll_pintuan_content"
        android:padding="@dimen/view_margin_10">

        <com.common.extend.roundedimageview.RoundedImageView
            android:id="@+id/iv_pintuan_head"
            android:layout_width="@dimen/view_margin_40"
            android:layout_height="@dimen/view_margin_40"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_default_head"
            app:riv_border_color="@color/B_black_10"
            app:riv_border_width="@dimen/view_margin_5"
            app:riv_corner_radius="45dip" />

        <TextView
            android:id="@+id/tv_pintuan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_pintuan_head"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/iv_pintuan_head"
            android:layout_alignBottom="@+id/iv_pintuan_head"
            android:text="" />




        <TextView
            android:id="@+id/tv_pintuan_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/view_margin_5"
            android:paddingBottom="@dimen/view_margin_5"
            android:paddingLeft="@dimen/view_margin_10"
            android:paddingRight="@dimen/view_margin_10"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:background="@drawable/selector_kanjia"
            android:layout_marginRight="@dimen/view_margin_10"
            android:text="去团购" />



        <TextView
            android:id="@+id/tv_pingtuan_last_people"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/view_margin_10"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_pintuan_do"
            android:singleLine="true"
            android:text="还差0人拼团"
            android:textColor="@color/B_black_70"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />


        <TextView
            android:id="@+id/tv_pingtuan_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_pingtuan_last_people"
            android:layout_toLeftOf="@+id/tv_pintuan_do"
            android:layout_marginTop="@dimen/view_margin_5"
            android:layout_marginRight="@dimen/view_margin_10"
            android:singleLine="true"
            android:text="剩余--:--:--"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/B_black_70"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>