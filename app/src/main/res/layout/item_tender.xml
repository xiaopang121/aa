<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/view_margin_15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/B_black_70"
        android:text="神东哈拉沟矿-DSJJ20180925/001-2018年职工生日礼物"/>


    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_marginTop="@dimen/view_margin_5"
        android:layout_width="match_parent"
        android:text="在采购与招标网发布 华润万家OLE北区22家门店2019-2020年复印机租赁项目招标公告。现邀请全国供应商参与投标，有意向的单位请及时联... "
        android:textColor="@color/B_black_50"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/view_margin_10"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/B_black_50"
            android:text="招标详情"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_keyboard_arrow_right__grey_24dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/B_black_50"
            android:text="2小时前"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_last_day"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:text="南京"
                android:padding="@dimen/view_margin_5"
                android:background="@drawable/shape_rect_10_blue"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_city"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:text="预告"
                android:padding="@dimen/view_margin_5"
                android:layout_marginLeft="@dimen/view_margin_10"
                android:layout_marginRight="@dimen/view_margin_10"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_type"
                android:background="@drawable/shape_rect_10_org"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:text="能源化工"
                android:padding="@dimen/view_margin_5"
                android:background="@drawable/shape_rect_10_green"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_categary"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>