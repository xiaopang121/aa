<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fdsafdsa"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/B_black_70"
        android:id="@+id/tv_station_num"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_station_num"
        android:layout_alignLeft="@+id/tv_station_num"
        android:singleLine="true"
        android:layout_marginTop="@dimen/view_margin_4"
        android:text="fdsafdsa"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/B_black_70"
        android:id="@+id/tv_station_name"/>



    <Button
        android:layout_width="@dimen/view_margin_70"
        android:id="@+id/bt_item_use"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/view_margin_5"
        android:text="@string/title_user"
        android:gravity="center"
        android:background="@drawable/select_login"
        android:layout_height="@dimen/view_margin_30" />


</RelativeLayout>