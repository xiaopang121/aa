<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_50"
        android:padding="@dimen/view_margin_5"
        android:background="?selectableItemBackground">



        <Button
            android:layout_width="80dp"
            android:text="去领取"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:id="@+id/bt_receiver"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/view_margin_10"
            android:textColor="@color/yellow_color_pressed"
            android:background="@drawable/selector_sms"
            android:layout_height="30dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/lly_money_bar"
            android:layout_height="match_parent">

            <TextView
                style="@style/my_center_textview"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:paddingRight="0dp"
                android:textColor="@color/B_black_70"
                android:text="领取红包" />

            <TextView
                style="@style/my_center_textview"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent"
                android:paddingRight="0dp"
                android:paddingLeft="0dp"
                android:gravity="left|center_vertical"
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:textColor="@color/yellow_color_pressed"
                android:text="100" />

            <TextView
                style="@style/my_center_textview"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="0dp"
                android:layout_width="wrap_content"
                android:textColor="@color/B_black_70"
                android:text="元" />


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/bt_receiver"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                style="@style/my_center_textview"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:id="@+id/item_taitou_title"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:textColor="@color/B_black_70"
                android:text="东恒律师事务所" />



            <TextView
                style="@style/my_center_textview"
                android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                android:id="@+id/item_collect_seconds"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="@color/B_black_50"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_width="wrap_content"
                android:text="2017.09.12 15:40" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>