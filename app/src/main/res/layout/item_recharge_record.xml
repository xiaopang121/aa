<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="支付宝充值"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/B_black_70"
        android:id="@+id/item_pay_type"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_pay_type"
        android:layout_alignLeft="@+id/item_pay_type"
        android:singleLine="true"
        android:layout_marginTop="@dimen/view_margin_4"
        android:text="今天16：33"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/B_black_50"
        android:id="@+id/item_pay_time"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:layout_marginRight="@dimen/view_margin_10"
        android:text="+1000"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/B_black_50"
        android:id="@+id/item_pay_money"/>



</RelativeLayout>