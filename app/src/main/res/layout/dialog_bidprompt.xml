<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/shape_rect_10_white2"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:background="@color/theme_color_primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/title_bid_prompt"
            android:layout_height="@dimen/view_margin_45" />

        <TextView
            android:id="@+id/et_phone"
            style="@style/login_edittext"
            android:singleLine="false"
            android:minHeight="130dp"
            android:padding="@dimen/view_margin_10"
            android:background="@color/white"
            android:hint="请输入您的手机号码（必填）"
            android:text="@string/title_bid_prompt_content"
            android:layout_height="wrap_content"
            android:textColor="@color/B_black_70" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_cancel"
                style="@style/STYLE_WHITE_SUMBIT_BUTTOM_BUTTON"
                android:layout_below="@+id/lly_input_bar"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:textColor="@color/B_black_50"
                android:layout_height="@dimen/view_margin_40"
                android:text="@string/cancel" />


            <Button
                android:id="@+id/bt_sure"
                style="@style/STYLE_GREEN_SUMBIT_BUTTOM_BUTTON"
                android:layout_below="@+id/lly_input_bar"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:layout_height="@dimen/view_margin_40"
                android:text="@string/login_sure" />


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>