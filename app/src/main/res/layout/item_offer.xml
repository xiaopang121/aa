<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/offer_field_title"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_offer_title"
            android:text="标题"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_1"
        android:background="@color/B_black_10"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/offer_field_type"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_order_type"
            android:text="付款成功"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_1"
        android:background="@color/B_black_10"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/offer_field_status"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_order_state"
            android:text="付款成功"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_1"
        android:background="@color/B_black_10"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/offer_field_time"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_offer_time"
            android:text="付款成功"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_1"
        android:background="@color/B_black_10"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/offer_field_money"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_order_money"
            android:text="付款成功"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>