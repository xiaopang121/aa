<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/view_margin_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_40"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">

        <com.common.extend.roundedimageview.RoundedImageView
            android:layout_width="@dimen/view_margin_30"
            app:riv_corner_radius="45dp"
            android:id="@+id/item_parent_icon"
            android:layout_height="@dimen/view_margin_30" />

        <TextView
            style="@style/my_center_textview"
            android:id="@+id/item_parent_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_margin_5"
            android:textColor="@color/B_black_85"
            android:text="电话号码" />




    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_child_label"
        android:background="@drawable/shape_rect_0_line_grey"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>