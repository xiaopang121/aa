<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/view_margin_30"
        android:orientation="vertical"

        android:background="@drawable/shape_rect_10_white2"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:textColor="@color/B_black_70"
            android:gravity="center"
            android:text="选择支付方式"
            android:layout_height="@dimen/view_margin_40" />

        <include layout="@layout/divide_v_black"></include>

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/radigroup"
            android:layout_height="wrap_content">


            <RadioButton
                android:layout_width="match_parent"
                android:button="@null"
                android:paddingLeft="@dimen/view_margin_5"
                android:paddingRight="@dimen/view_margin_5"
                android:text="支付宝支付"
                android:id="@+id/rb_alipay"
                android:textColor="@color/B_black_50"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/view_margin_10"
                android:layout_height="@dimen/view_margin_45" />


            <View xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_margin_1"
                android:orientation="vertical"
                android:background="@color/md_divider_black">

            </View>


            <RadioButton
                android:layout_width="match_parent"
                android:button="@null"
                android:text="微信支付"
                android:id="@+id/rb_wx"
                android:paddingLeft="@dimen/view_margin_5"
                android:paddingRight="@dimen/view_margin_5"
                android:textColor="@color/B_black_50"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/view_margin_10"
                android:layout_height="@dimen/view_margin_45" />


        </RadioGroup>



    </LinearLayout>



</RelativeLayout>