<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_45"
        >

        <TextView
            style="@style/my_center_textview"
            android:id="@+id/item_taitou_title"
            android:gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:text="电话号码" />


        <TextView
            style="@style/my_center_textview"
            android:id="@+id/item_taitou_type"
            android:textColor="@color/B_black_50"
            android:layout_toRightOf="@+id/item_taitou_title"
            android:gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:text="(企业)" />


        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:layout_marginRight="@dimen/view_margin_15"
            android:src="@drawable/ic_taitou_edit"
            android:id="@+id/iv_taitou_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <include layout="@layout/divide_v_black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_margin_40"
       >

        <TextView
            style="@style/my_center_textview"
            android:id="@+id/item_taitou_default"
            android:drawableLeft="@drawable/ic_circle_normal"
            android:gravity="left|center_vertical"
            android:textColor="@color/B_black_50"
            android:drawablePadding="@dimen/view_margin_5"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="默认抬头" />


        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:id="@+id/iv_taitou_delete"
            android:layout_marginRight="@dimen/view_margin_15"
            android:src="@drawable/ic_taitou_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>