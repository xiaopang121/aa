<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/view_margin_15"
        android:paddingBottom="@dimen/view_margin_15"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:background="@color/white">



        <TextView
            style="@style/my_center_textview"
            android:id="@+id/item_state"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/B_black_50"
            android:layout_marginLeft="@dimen/view_margin_10"
            android:layout_toRightOf="@+id/item_shop_state"
            android:layout_alignParentRight="true"
            android:gravity="left|center_vertical"
            android:layout_width="wrap_content"
            android:text="14:12" />


        <TextView
            style="@style/my_center_textview"
            android:id="@+id/item_title"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/item_state"
            android:textColor="@color/B_black_85"
            android:text="" />


    </RelativeLayout>

</LinearLayout>