<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/view_margin_15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">


    <TextView
        android:layout_width="@dimen/view_margin_30"
        android:scaleType="centerInside"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:id="@+id/iv_publish_type"
        android:layout_height="@dimen/view_margin_30" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_publish_state"
        android:layout_alignTop="@+id/iv_publish_type"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/B_black_70"
        android:text="状态"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_publish_title"
        android:layout_marginRight="@dimen/view_margin_5"
        android:layout_marginLeft="@dimen/view_margin_5"
        android:layout_toLeftOf="@+id/tv_publish_state"
        android:layout_toRightOf="@+id/iv_publish_type"
        android:lines="2"
        android:gravity="left|top"
        android:layout_alignTop="@+id/iv_publish_type"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/B_black_70"
        android:text="神东哈拉沟矿-DSJJ20180925/001-2018年职工生日礼物"/>


    <TextView
        android:id="@+id/tv_publish_endtime"
        android:layout_marginTop="@dimen/view_margin_5"
        android:layout_width="wrap_content"
        android:text="2222"
        android:layout_below="@+id/tv_publish_title"
        android:layout_alignLeft="@+id/tv_publish_title"
        android:textColor="@color/B_black_50"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_height="wrap_content"
        />



    <TextView
        android:id="@+id/tv_peoples"
        android:layout_alignTop="@+id/tv_publish_endtime"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:text="0人"
        android:textColor="@color/theme_color_primary"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_height="wrap_content"
        />


    <TextView
        android:layout_alignTop="@+id/tv_publish_endtime"
        android:layout_toLeftOf="@+id/tv_peoples"
        android:layout_width="wrap_content"
        android:text="参与人数:"
        android:layout_marginRight="@dimen/view_margin_5"
        android:textColor="@color/B_black_50"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_height="wrap_content"
        />


</RelativeLayout>