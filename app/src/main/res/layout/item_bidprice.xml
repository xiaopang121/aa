<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/view_margin_15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bid_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/B_black_70"
        android:text="神东哈拉沟矿-DSJJ20180925/001-2018年职工生日礼物"/>


    <com.insthub.cat.android.ui.widget.StepsView
        android:id="@+id/stepsView"
        android:layout_marginTop="@dimen/view_margin_5"
        android:layout_width="match_parent"
        custom:labels="@array/labels2"
        custom:numOfSteps="100"
        custom:labelSize="10"
        custom:circleRadius="10"
        custom:progressMargin="100"
        custom:progressColor="@color/theme_color_primary"
        custom:labelColor="@color/B_black_50"
        custom:barColor="@color/theme_color_primary"
        android:layout_marginRight="@dimen/view_margin_20"
        android:layout_marginLeft="@dimen/view_margin_20"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/view_margin_10"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/B_black_50"
            android:text="竞价详情"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/B_black_50"
            android:text="剩余天数：7天"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_last_day"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:text="南京"
                android:padding="@dimen/view_margin_5"
                android:background="@drawable/shape_rect_10_blue"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_city"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:text="竞价"
                android:padding="@dimen/view_margin_5"
                android:layout_marginLeft="@dimen/view_margin_10"
                android:layout_marginRight="@dimen/view_margin_10"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_type"
                android:background="@drawable/shape_rect_10_org"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/white"
                android:text="能源化工"
                android:padding="@dimen/view_margin_5"
                android:background="@drawable/shape_rect_10_green"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_categary"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>