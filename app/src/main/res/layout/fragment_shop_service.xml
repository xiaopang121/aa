<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    android:background="@color/transparent"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:padding="@dimen/view_margin_10"
        android:id="@+id/rv_index_menu"
        android:layout_weight="1"
        android:scrollbars="none"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>


    <View
        android:layout_height="@dimen/view_margin_1"
        android:layout_width="match_parent"
        android:background="@color/B_black_10"
       ></View>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/view_margin_50">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="?selectableItemBackground"
            android:layout_weight="1"
            android:id="@+id/rll_share"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/yellow_color_pressed"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:text="分享"

                android:gravity="center_vertical"
                android:drawablePadding="@dimen/view_margin_5"
                android:drawableLeft="@drawable/ic_yellow_share"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <View
            android:layout_width="@dimen/view_margin_1"
            android:layout_height="match_parent"
            android:background="@color/B_black_10"
            android:layout_marginTop="@dimen/view_margin_3"
            android:layout_marginBottom="@dimen/view_margin_3"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="?selectableItemBackground"
            android:layout_weight="1"
            android:id="@+id/rll_contract_server"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/yellow_color_pressed"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:text="联系客服"

                android:gravity="center_vertical"
                android:drawablePadding="@dimen/view_margin_5"
                android:drawableLeft="@drawable/ic_yellow_msg"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
