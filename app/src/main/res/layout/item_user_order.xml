<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="@dimen/view_margin_45">
       <TextView
           android:layout_width="wrap_content"
           android:gravity="center"
           android:textAppearance="@style/TextAppearance.AppCompat.Caption"
           android:layout_alignParentLeft="true"
           android:id="@+id/item_order_shop_name"
           android:text=""
           android:textColor="@color/B_black_70"
           android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentRight="true"
            android:id="@+id/item_order_state"
            android:text="付款成功"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/md_divider_black"
        android:layout_height="@dimen/view_margin_1"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_margin_10"
        android:background="?selectableItemBackground">

        <ImageView
            android:layout_width="80dp"
            android:src="@drawable/logo"
            android:id="@+id/iv_collect_head"
            android:layout_height="70dp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignTop="@+id/iv_collect_head"
            android:layout_alignBottom="@+id/iv_collect_head"
            android:layout_toLeftOf="@+id/tv_collect_address"
            android:layout_toRightOf="@+id/iv_collect_head"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                style="@style/my_center_textview"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:id="@+id/item_order_des"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_width="match_parent"
                android:textColor="@color/B_black_70"
                android:text="劳动合同纠纷" />

            <TextView
                style="@style/my_center_textview"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/item_order_createtime"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_width="match_parent"
                android:text="下单时间:" />

            <TextView
                style="@style/my_center_textview"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/item_order_servicetime"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_width="match_parent"
                android:text="服务时间" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    style="@style/my_center_textview"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:text="合计:" />

                <TextView
                    style="@style/my_center_textview"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_service_price"
                    android:textColor="@color/yellow_color_pressed"
                    android:text="￥9000.00" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="@dimen/view_margin_45">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_alignParentLeft="true"
                android:id="@+id/item_order_contract"
                android:text="联系商家"
                android:drawablePadding="@dimen/view_margin_3"
                android:drawableLeft="@drawable/ic_chat_yellow"
                android:paddingLeft="@dimen/view_margin_15"
                android:paddingTop="@dimen/view_margin_10"
                android:paddingBottom="@dimen/view_margin_10"
                android:paddingRight="@dimen/view_margin_15"
                android:background="@drawable/select_wx_login"
                android:layout_marginRight="@dimen/view_margin_10"
                android:textColor="@color/yellow_color_pressed"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:id="@+id/item_order_delete"
            android:text="删除订单"
            android:paddingLeft="@dimen/view_margin_15"
            android:paddingTop="@dimen/view_margin_10"
            android:paddingBottom="@dimen/view_margin_10"
            android:paddingRight="@dimen/view_margin_15"
            android:padding="@dimen/view_margin_10"
            android:background="@drawable/select_login_black"
            android:textColor="@color/B_black_70"
            android:layout_marginRight="@dimen/view_margin_10"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:id="@+id/item_order_sub"
            android:text="砍价"
            android:paddingLeft="@dimen/view_margin_15"
            android:paddingTop="@dimen/view_margin_10"
            android:paddingBottom="@dimen/view_margin_10"
            android:paddingRight="@dimen/view_margin_15"
            android:background="@drawable/select_wx_login"
            android:layout_marginRight="@dimen/view_margin_10"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:id="@+id/item_order_comment"
            android:text="评价"
            android:paddingLeft="@dimen/view_margin_15"
            android:paddingTop="@dimen/view_margin_10"
            android:paddingBottom="@dimen/view_margin_10"
            android:paddingRight="@dimen/view_margin_15"
            android:background="@drawable/select_wx_login"
            android:layout_marginRight="@dimen/view_margin_10"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:id="@+id/item_order_pay"
            android:text="支付"
            android:paddingLeft="@dimen/view_margin_15"
            android:paddingTop="@dimen/view_margin_10"
            android:paddingBottom="@dimen/view_margin_10"
            android:paddingRight="@dimen/view_margin_15"
            android:background="@drawable/select_wx_login"
            android:layout_marginRight="@dimen/view_margin_10"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:id="@+id/item_order_pay_server"
            android:background="@drawable/select_wx_login"
            android:text="确认付款服务商"
            android:padding="@dimen/view_margin_10"
            android:visibility="gone"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:id="@+id/item_order_finish"
            android:text="服务商申请验收"
            android:paddingLeft="@dimen/view_margin_15"
            android:paddingTop="@dimen/view_margin_10"
            android:paddingBottom="@dimen/view_margin_10"
            android:paddingRight="@dimen/view_margin_15"
            android:padding="@dimen/view_margin_10"
            android:background="@drawable/select_login_black"
            android:textColor="@color/B_black_70"
            android:layout_marginRight="@dimen/view_margin_10"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>