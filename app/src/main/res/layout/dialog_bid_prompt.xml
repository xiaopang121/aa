<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/view_margin_20"
        android:background="@drawable/shape_rect_10_white2"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:background="@drawable/shape_common_top_corner_yellow"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:text="@string/title_bid_prompt"
            android:layout_height="@dimen/view_margin_45" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="150dp">


            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/B_black_70"
                android:text="@string/str_prompt"
                android:gravity="center"
                android:background="@color/main_background"
                android:layout_above="@+id/lly_buttom_view"
                android:layout_centerInParent="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="match_parent" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/lly_buttom_view"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/B_black_30"
                    android:text="取消"
                    android:paddingTop="@dimen/view_margin_10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/view_margin_10"
                    android:background="@drawable/selector_orieign_top_corner_10"
                    android:id="@+id/tv_cancel"
                    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="确定"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rect_top_10_green"
                    android:paddingTop="@dimen/view_margin_10"
                    android:paddingBottom="@dimen/view_margin_10"
                    android:id="@+id/tv_sure"
                    android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                    android:layout_height="wrap_content" />



            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>