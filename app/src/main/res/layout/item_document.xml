<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="?selectableItemBackground">



    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/view_margin_10"
        android:id="@+id/lly_brand_content"
        android:layout_height="wrap_content">


        <com.common.extend.roundedimageview.RoundedImageView
            android:layout_width="@dimen/view_margin_50"
            android:id="@+id/iv_document"
            app:riv_corner_radius="@dimen/view_margin_10"
            android:src="@drawable/ic_document"
            android:layout_height="@dimen/view_margin_50"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/iv_document"
            android:layout_marginTop="@dimen/view_margin_5"
            android:textColor="@color/yellow_color_pressed"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/view_margin_10"
            android:layout_toRightOf="@+id/iv_document"
            android:id="@+id/tv_document_title"
            android:text="人气榜"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/B_black_50"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_document"
            android:layout_marginLeft="@dimen/view_margin_10"
            android:id="@+id/tv_document_file"
            android:layout_alignBottom="@+id/iv_document"
            android:text="月销售"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/view_margin_5"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>