<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rect_10_white2"
    android:gravity="center_horizontal"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
            android:textColor="@color/B_black_85"
            android:text="加入黑名单"
            android:gravity="center"
            android:layout_height="@dimen/view_margin_45" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/tv_dialog_title"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/B_black_70"
            android:paddingTop="@dimen/view_margin_15"
            android:paddingBottom="@dimen/view_margin_15"
            android:gravity="center"
            android:text="加入黑名单，你将不再收到消息"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/view_margin_20"
            android:layout_height="@dimen/view_margin_45">


            <View
                android:layout_width="1dp"
                android:layout_marginLeft="@dimen/view_margin_5"
                android:layout_marginRight="@dimen/view_margin_5"
                android:layout_centerInParent="true"

                android:layout_height="match_parent"
                android:id="@+id/view_center"></View>




            <Button
                android:layout_width="wrap_content"
                android:text="取消"
                android:layout_toLeftOf="@+id/view_center"
                android:paddingLeft="@dimen/view_margin_40"
                android:background="?selectableItemBackground"
                android:paddingRight="@dimen/view_margin_40"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:singleLine="true"
                android:id="@+id/bt_cancel"
                android:textColor="@color/B_black_70"
                android:layout_height="@dimen/view_margin_45" />


            <Button
                android:layout_width="wrap_content"
                android:text="确认"
                android:id="@+id/bt_sure"
                android:layout_toRightOf="@+id/view_center"
                android:paddingLeft="@dimen/view_margin_40"
                android:background="?selectableItemBackground"
                android:paddingRight="@dimen/view_margin_40"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:singleLine="true"
                android:textColor="@color/yellow_color_pressed"
                android:layout_height="@dimen/view_margin_45" />


        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>