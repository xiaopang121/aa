<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rect_10_white2"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/tv_dialog_title"
        android:layout_marginTop="@dimen/view_margin_20"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
        android:textColor="@color/B_black_70"
        android:paddingTop="@dimen/view_margin_20"
        android:paddingBottom="@dimen/view_margin_15"
        android:gravity="center"
        android:text="@string/title_select_usertype"
        />




    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/rll_button_view"
        android:layout_below="@+id/tv_dialog_title"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/bt_caption"
            android:paddingLeft="@dimen/view_margin_30"

            android:button="@null"
            android:paddingRight="@dimen/view_margin_30"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/view_margin_5"
            android:text="@string/title_captain"
            android:gravity="center"
            android:background="@drawable/select_user_type"
            android:layout_height="@dimen/view_margin_30" />


        <View
            android:layout_width="@dimen/view_margin_30"
            android:layout_height="wrap_content"></View>


        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/bt_shipowner"
            android:paddingLeft="@dimen/view_margin_30"
            android:button="@null"
            android:paddingRight="@dimen/view_margin_30"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/view_margin_5"
            android:text="@string/title_shipowner"
            android:gravity="center"
            android:background="@drawable/select_user_type"
            android:layout_height="@dimen/view_margin_30" />


    </RadioGroup>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/iv_close"
        android:src="@drawable/ic_close_black_24dp"
        android:layout_height="wrap_content" />


</RelativeLayout>