<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <ImageView
        android:layout_width="100dp"
        android:layout_margin="@dimen/view_margin_10"
        android:scaleType="fitXY"
        android:src="@drawable/ic_taitou_edit"
        android:id="@+id/item_info_head"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="70dp" />




    <TextView
        style="@style/my_center_textview"
        android:id="@+id/item_info_source"
        android:layout_marginLeft="@dimen/view_margin_10"
        android:textColor="@color/B_black_50"
        android:layout_marginTop="@dimen/view_margin_5"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_info_head"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_toRightOf="@+id/item_taitou_title"
        android:gravity="left"
        android:paddingLeft="0dp"
        android:layout_width="wrap_content"
        android:text="(企业)" />


    <TextView
        style="@style/my_center_textview"
        android:id="@+id/item_info_title"
        android:paddingLeft="0dp"
        android:layout_marginLeft="@dimen/view_margin_10"
        android:layout_toLeftOf="@+id/item_info_head"
        android:layout_alignTop="@+id/item_info_head"
        android:gravity="left|top"
        android:layout_above="@+id/item_info_source"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/B_black_70"
        android:text="电话号码" />



</RelativeLayout>