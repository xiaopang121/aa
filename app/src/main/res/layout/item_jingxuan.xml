<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/view_margin_2"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">


            <com.common.extend.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:id="@+id/iv_jinxuan_image"
                app:riv_corner_radius="0dp"
                android:src="@drawable/ic_default_advert"
                android:layout_height="150dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/B_black_70"
                android:layout_below="@+id/iv_jinxuan_image"
                android:gravity="center"
                android:layout_marginTop="@dimen/view_margin_10"
                android:id="@+id/tv_jinxuan_name"
                android:layout_centerVertical="true"
                android:text="人气榜"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/view_margin_4"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:layout_height="wrap_content"/>



            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/yellow_color_pressed"
                android:layout_below="@+id/tv_jinxuan_name"
                android:layout_marginLeft="@dimen/view_margin_4"
                android:gravity="center"
                android:layout_marginTop="@dimen/view_margin_3"
                android:id="@+id/tv_jinxuan_price"
                android:text="月销售"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_height="wrap_content"/>



        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>