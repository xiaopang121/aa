<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="@dimen/view_margin_40">
       <TextView
           android:layout_width="wrap_content"
           android:gravity="center"
           android:textAppearance="@style/TextAppearance.AppCompat.Caption"
           android:layout_alignParentLeft="true"
           android:id="@+id/item_order_time"
           android:text="下单时间:"
           android:textColor="@color/B_black_70"
           android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/view_margin_20"
            android:layout_toRightOf="@+id/item_order_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_order_state"
            android:text="付款成功"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:gravity="center_vertical"
        android:layout_height="@dimen/view_margin_40">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/field_name"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_order_name"
            android:text="付款成功"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="@dimen/view_margin_40">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/field_service"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_order_service"
            android:text="付款成功"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView android:layout_height="@dimen/view_margin_20"
                       android:src="@drawable/ic_chat_yellow"
                       android:id="@+id/iv_chat"
                      android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                       android:layout_width="@dimen/view_margin_20"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="@dimen/view_margin_40">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/field_money"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_order_money"
            android:text="付款成功"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:gravity="center|right"
            android:paddingRight="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_order_project_state"
            android:text="付款成功"
            android:visibility="gone"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:id="@+id/item_order_yanshou"
                android:text="申请客户验收"
                android:paddingLeft="@dimen/view_margin_15"
                android:paddingRight="@dimen/view_margin_15"
                android:background="@drawable/select_login_black"
                android:textColor="@color/B_black_70"
                android:layout_height="match_parent" />
        </RelativeLayout>



    </LinearLayout>


</LinearLayout>