<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="40dp">
       <TextView
           android:layout_width="wrap_content"
           android:gravity="center"
           android:layout_centerVertical="true"
           android:textAppearance="@style/TextAppearance.AppCompat.Caption"
           android:layout_alignParentLeft="true"
           android:id="@+id/item_withdraw_1"
           android:text="未提现"
           android:textColor="@color/B_black_70"
           android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:background="@drawable/select_wx_login"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentRight="true"
            android:id="@+id/item_withdraw_apply"
            android:text="提现申请"
            android:paddingLeft="@dimen/view_margin_10"
            android:paddingTop="@dimen/view_margin_5"
            android:paddingBottom="@dimen/view_margin_5"
            android:paddingRight="@dimen/view_margin_10"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/md_divider_black"
        android:layout_height="@dimen/view_margin_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/field_name"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_withdraw_name"
            android:text="付款成功"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/field_time"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_withdraw_time"
            android:text="付款成功"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/field_service"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_withdraw_service"
            android:text="付款成功"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/view_margin_5"
        android:paddingBottom="@dimen/view_margin_5"
        android:paddingLeft="@dimen/view_margin_10"
        android:paddingRight="@dimen/view_margin_10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_alignParentLeft="true"
            android:text="@string/field_money"
            android:textColor="@color/B_black_85"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center|left"
            android:paddingLeft="@dimen/view_margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/item_withdraw_money2"
            android:text="付款成功"
            android:textColor="@color/yellow_color_pressed"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>