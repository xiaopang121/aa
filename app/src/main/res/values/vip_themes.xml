<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="StyledIndicators" parent="AppTheme">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <item name="android:background">#18FF0000</item>
        <item name="footerColor">#FFAA2222</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#AA000000</item>
        <item name="selectedColor">#FFff0000</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="CustomLinePageIndicator">
        <item name="strokeWidth">4dp</item>
        <item name="lineWidth">30dp</item>
        <item name="unselectedColor">@color/transparent</item>
        <item name="selectedColor">#ffffff</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">#FF888888</item>
        <item name="strokeColor">#FF000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="radius">10dp</item>
        <item name="centered">true</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@color/transparent</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CustomUnderlinePageIndicator">
        <item name="selectedColor">#ffffff</item>
        <item name="android:background">@color/transparent</item>
        <item name="fadeLength">1000</item>
        <item name="android:layout_weight">1</item>
        <item name="fadeDelay">1000</item>
    </style>



    <style name="StyledIndicators2" parent="Transparent.Light">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator2</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator2</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator2</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator2</item>

        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator2</item>
    </style>

    <style name="CustomTitlePageIndicator2">
        <item name="android:background">#18FF0000</item>
        <item name="footerColor">#FFAA2222</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">#AA000000</item>
        <item name="selectedColor">#FFff0000</item>
        <item name="selectedBold">true</item>
    </style>

    <style name="CustomLinePageIndicator2">
        <item name="strokeWidth">4dp</item>
        <item name="lineWidth">30dp</item>
        <item name="unselectedColor">@color/transparent</item>
        <item name="selectedColor">@color/white</item>
    </style>

    <style name="CustomCirclePageIndicator2">
        <item name="fillColor">#FF888888</item>
        <item name="strokeColor">#FF000000</item>
        <item name="strokeWidth">2dp</item>
        <item name="radius">10dp</item>
        <item name="centered">true</item>
    </style>

    <style name="CustomTabPageIndicator2" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/selector_tab_page</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:textColor">@color/common_tab_text_color</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text2" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/common_tab_text_color</item>
    </style>

    <style name="CustomUnderlinePageIndicator2">
        <item name="selectedColor">@color/theme_color_primary</item>
        <item name="android:background">@color/transparent</item>
        <item name="fadeLength">1000</item>
        <item name="fadeDelay">1000</item>
    </style>



</resources>