<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_enabled="false">
        <shape>
            <corners android:topLeftRadius="0dp" android:bottomLeftRadius="@dimen/view_margin_5"
                android:bottomRightRadius="0dp" android:topRightRadius="0dp"></corners>
            <solid  android:color="@color/B_black_10" />
            <stroke android:color="@color/B_black_10"
                    android:width="0.5dp"></stroke>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:topLeftRadius="0dp" android:bottomLeftRadius="@dimen/view_margin_5"
                android:bottomRightRadius="0dp" android:topRightRadius="0dp"></corners>
            <solid  android:color="@color/B_black_10" />
            <stroke android:color="@color/B_black_10"
                android:width="0.5dp"></stroke>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:topLeftRadius="0dp" android:bottomLeftRadius="@dimen/view_margin_5"
                android:bottomRightRadius="0dp" android:topRightRadius="0dp"></corners>
            <solid  android:color="@color/color_f2f2f2" />
            <stroke android:color="@color/color_f2f2f2"
                android:width="0.5dp"></stroke>
        </shape>
    </item>
</selector>