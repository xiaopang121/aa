        <shape>
            <solid android:color="#00b772" />
            <stroke android:color="@color/theme_color_primary"
                android:width="1dp"></stroke>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00b772" />
            <stroke android:color="@color/transparent"
                android:width="1dp"></stroke>
        </shape>
    </item>
</selector>