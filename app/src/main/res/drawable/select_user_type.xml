<selector  xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_checked="true">
        <shape>
            <corners android:radius="@dimen/view_margin_45"/>
            <gradient android:startColor="@color/button_start_color" android:endColor="@color/button_end_color"
                android:angle="0"></gradient>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape >
            <corners android:radius="@dimen/view_margin_45"/>
            <gradient android:startColor="@color/gray" android:endColor="@color/gray"
                android:angle="0"></gradient>
        </shape>
    </item>


</selector>